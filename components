import React, { useState } from 'react';
import { SparklesIcon, SearchIcon, GlobeIcon, Loader2Icon } from 'lucide-react';

interface InputFormProps {
  onSubmit: (location: string, language: string, generateImages: boolean) => void;
  isLoading: boolean;
}

const LANGUAGES = [
  { code: 'es', label: 'EspaÃ±ol ðŸ‡²ðŸ‡½', prompt: 'Spanish (Mexican style)' },
  { code: 'en', label: 'English ðŸ‡ºðŸ‡¸', prompt: 'English' },
  { code: 'fr', label: 'FranÃ§ais ðŸ‡«ðŸ‡·', prompt: 'French' },
  { code: 'de', label: 'Deutsch ðŸ‡©ðŸ‡ª', prompt: 'German' },
  { code: 'it', label: 'Italiano ðŸ‡®ðŸ‡¹', prompt: 'Italian' },
  { code: 'ja', label: 'æ—¥æœ¬èªž ðŸ‡¯ðŸ‡µ', prompt: 'Japanese' },
  { code: 'pt', label: 'PortuguÃªs ðŸ‡§ðŸ‡·', prompt: 'Portuguese' },
];

const PRESETS = [
  { label: "Tlatelolco", location: 'Mercado de Tlatelolco' },
  { label: "Palenque", location: 'Zona ArqueolÃ³gica de Palenque' },
  { label: "Batalla Puebla", location: 'Fuertes de Loreto' },
  { label: "RevoluciÃ³n", location: 'Monumento a la RevoluciÃ³n' },
];

export const InputForm: React.FC<InputFormProps> = ({ onSubmit, isLoading }) => {
  const [location, setLocation] = useState('');
  const [language, setLanguage] = useState('es');
  const [generateImages, setGenerateImages] = useState(true);

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    const selectedLang = LANGUAGES.find(l => l.code === language)?.prompt || 'Spanish';
    onSubmit(location, selectedLang, generateImages);
  };

  return (
    <div className="w-full">
      <form onSubmit={handleSubmit} className="space-y-6 bg-white dark:bg-slate-800/80 p-6 md:p-10 rounded-[2.5rem] border border-stone-200 dark:border-slate-700 shadow-2xl backdrop-blur-md">
        <div className="space-y-5">
          <div className="space-y-2">
            <label className="text-[10px] md:text-xs font-black text-red-700 dark:text-red-500 uppercase tracking-widest px-1">Lugar o Suceso de MÃ©xico</label>
            <div className="relative group">
              <div className="absolute left-4 top-1/2 -translate-y-1/2 flex items-center justify-center pointer-events-none z-10 text-stone-400 group-focus-within:text-red-600 transition-colors">
                <SearchIcon size={20} />
              </div>
              <input
                type="text"
                required
                value={location}
                onChange={(e) => setLocation(e.target.value)}
                placeholder="Ej. Uxmal, El ZÃ³calo, Grito de Dolores..."
                className="w-full bg-stone-50 dark:bg-slate-900 border-none rounded-2xl py-4 md:py-5 pl-12 md:pl-14 pr-4 text-base md:text-lg focus:ring-2 focus:ring-red-600 transition-all outline-none shadow-inner text-stone-800 dark:text-white"
              />
            </div>
          </div>

          <div className="space-y-2">
            <label className="text-[10px] md:text-xs font-black text-red-700 dark:text-red-500 uppercase tracking-widest px-1">Idioma de la Experiencia</label>
            <div className="relative group">
              <div className="absolute left-4 top-1/2 -translate-y-1/2 flex items-center justify-center pointer-events-none z-10 text-stone-400 group-focus-within:text-red-600 transition-colors">
                <GlobeIcon size={20} />
              </div>
              <select
                value={language}
                onChange={(e) => setLanguage(e.target.value)}
                className="w-full bg-stone-50 dark:bg-slate-900 border-none rounded-2xl py-4 md:py-5 pl-12 md:pl-14 pr-4 text-base md:text-lg focus:ring-2 focus:ring-red-600 transition-all outline-none cursor-pointer shadow-inner text-stone-800 dark:text-white appearance-none"
              >
                {LANGUAGES.map(lang => (
                  <option key={lang.code} value={lang.code}>{lang.label}</option>
                ))}
              </select>
            </div>
          </div>

          <label className="flex items-center gap-3 cursor-pointer group py-2 px-1">
            <input 
              type="checkbox"
              checked={generateImages}
              onChange={e => setGenerateImages(e.target.checked)}
              className="w-5 h-5 rounded border-stone-300 text-red-600 focus:ring-red-600 cursor-pointer"
            />
            <span className="text-xs md:text-sm font-medium text-stone-600 dark:text-slate-400 group-hover:text-red-700 transition-colors">Generar retratos de Ã©poca</span>
          </label>
        </div>

        <button
          type="submit"
          disabled={isLoading || !location}
          className="w-full py-4 md:py-5 rounded-2xl font-black text-lg md:text-xl bg-red-700 hover:bg-red-600 text-white shadow-xl shadow-red-900/20 flex items-center justify-center gap-3 transition-all active:scale-[0.98] disabled:opacity-50"
        >
          {isLoading ? <Loader2Icon className="animate-spin" size={24} /> : <SparklesIcon size={24} />}
          {isLoading ? 'SINTONIZANDO...' : 'ESCUCHAR EL PASADO'}
        </button>
        
        <div className="flex flex-wrap justify-center gap-2 pt-2">
            {PRESETS.map((p, i) => (
                <button
                    key={i}
                    type="button"
                    onClick={() => setLocation(p.location)}
                    className="text-[9px] md:text-[10px] px-3 py-1.5 bg-stone-100 dark:bg-slate-800 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-full border border-stone-200 dark:border-slate-700 transition-all text-stone-600 dark:text-stone-300 font-bold"
                >
                    {p.label}
                </button>
            ))}
        </div>
      </form>
    </div>
  );
};
